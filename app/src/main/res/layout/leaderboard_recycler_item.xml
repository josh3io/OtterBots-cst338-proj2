<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="1">

    <TextView
        android:id="@+id/recyclerItemRankTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/rank"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recyclerItemUsernameTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="4"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/username"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recyclerItemWinsTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="3"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/wins"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recyclerItemLossesTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_columnWeight="3"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/losses"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recyclerItemTiesTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_columnWeight="3"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/ties"
        android:textSize="18sp" />



</GridLayout>