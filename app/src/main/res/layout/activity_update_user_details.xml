<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    style="@style/ScreenRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateUserDetails">

    <TextView
        android:id="@+id/Title"
        style="@style/PrimaryTitle"
        android:text="@string/update_username_and_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/CurrentUsername"
        style="@style/StatLabel"
        android:text="@string/current_username"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/NewUsername"
        style="@style/PrimaryInput"
        android:hint="@string/new_username"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/CurrentUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/NewPassword"
        style="@style/PrimaryInput"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/NewUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/ConfirmPassword"
        style="@style/PrimaryInput"
        android:hint="@string/confirm_new_password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/NewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/UpdateButton"
        style="@style/PrimaryButton"
        android:text="@string/update_user_details"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/ReturnButton"
        style="@style/PrimaryButton"
        android:text="@string/return_to_main"
        app:layout_constraintTop_toBottomOf="@id/UpdateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>